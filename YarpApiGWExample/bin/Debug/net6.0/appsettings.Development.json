{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "payment-api" : {
        "ClusterId": "payment",
        "Match": {
          "Path": "/payment-api/{*remainder}"
        },
        "Transforms":  [
          {
            "PathRemovePrefix": "/payment-api"
          }
        ]
      },
      "product-api" : {
        "ClusterId": "product",
        "Match": {
          "Path": "/product-api/{*remainder}"
        },
        "Transforms":  [ 
          {
            "PathRemovePrefix": "/product-api"
          }
        ] 
      },
      "identity-server" : {
        "ClusterId": "identity-server",
        "Match": {
          "Path": "/identity-server/{*remainder}"
        },
        "Transforms":  [
          {
            "PathRemovePrefix": "/identity-server"
          }
        ]
      }
    },
    "Clusters": {
      "payment": {
        "Destinations": {
          "payment-api": {
            "Address": "http://localhost:5001/api"
          }
        }
      },
      "product": {
        "Destinations": {
          "product-api": {
            "Address": "http://localhost:5002/api"
          }
        }
      },
      "identity-server": {
        "Destinations": {
          "identity-server": {
            "Address": "http://localhost:5004/"
          }
        }
      }
    }
  }
}
